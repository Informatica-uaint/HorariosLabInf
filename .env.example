# .env.example - Variables de entorno para desarrollo
# Copiar a .env y configurar con valores reales

# Base de datos MySQL
MYSQL_HOST=mysql
MYSQL_USER=app_user
MYSQL_PASSWORD=app_password
MYSQL_DB=registro_qr
MYSQL_PORT=3306

# Configuración de la aplicación Flask
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET=dev-jwt-secret-key-change-in-production

# Configuración de logging
LOG_LEVEL=INFO

# Configuración CORS
CORS_ORIGINS=*

# URLs de servicios
SERVER_URL=https://localhost:5000
FRONTEND_WEB_URL=http://localhost:19002
FRONTEND_LECTOR_URL=http://localhost:19005

# Configuración para contenedores
DB_CHARSET=utf8mb4

# MySQL Root Password (solo para desarrollo)
MYSQL_ROOT_PASSWORD=root_password