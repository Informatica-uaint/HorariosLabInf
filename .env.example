# ==============================================
# ENVIRONMENT CONFIGURATION - EXAMPLE
# ==============================================

# ==============================================
# GITHUB REPOSITORY CONFIGURATION
# ==============================================
GITHUB_REPOSITORY=Informatica-uaint/HorariosLabInf
IMAGE_TAG=latest

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=registro_qr
MYSQL_USER=acceso_user
MYSQL_PASSWORD=your_secure_password_here
MYSQL_HOST=mysql
MYSQL_PORT=3306

# ==============================================
# APPLICATION SECURITY
# ==============================================
SECRET_KEY=your_secret_key_here_min_32_chars
JWT_SECRET=your_jwt_secret_here_min_32_chars

# ==============================================
# FLASK APPLICATION CONFIGURATION
# ==============================================
FLASK_ENV=production
FLASK_DEBUG=0
LOG_LEVEL=INFO
CORS_ORIGINS=https://acceso.informaticauaint.com,https://www.acceso.informaticauaint.com

# ==============================================
# SSL CONFIGURATION
# ==============================================
USE_SSL=false
SSL_CERT_PATH=./certs

# ==============================================
# SERVER CONFIGURATION
# ==============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5000

FRONTEND_HOST=localhost
FRONTEND_PORT=80

# ==============================================
# DATA PERSISTENCE
# ==============================================
DATA_PATH=./data

# ==============================================
# QR READER CONFIGURATION (Dynamic QR Scanner)
# ==============================================
# Secret for validating JWT tokens from generador-qr
# IMPORTANT: Must match READER_QR_SECRET in generador-qr project
READER_QR_SECRET=your_reader_qr_secret_here_same_as_generador_qr
READER_STATION_ID=lector-web

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# API Backend URL
# For local development: http://localhost:5000/api
# For production: https://api.acceso.informaticauaint.com/api
EXPO_PUBLIC_API_URL=http://localhost:5000/api
