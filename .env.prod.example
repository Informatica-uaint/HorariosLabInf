# .env.prod.example - Production Environment Variables Template
# Copy this file to .env.prod and set your production values

# ==============================================
# GITHUB REPOSITORY CONFIGURATION
# ==============================================
GITHUB_REPOSITORY=Informatica-uaint/HorariosLabInf
IMAGE_TAG=latest

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
MYSQL_DATABASE=registro_qr
MYSQL_USER=app_user
MYSQL_PASSWORD=your_strong_app_password_here
MYSQL_HOST=mysql
MYSQL_PORT=3306

# ==============================================
# APPLICATION SECURITY
# ==============================================
SECRET_KEY=your_very_strong_secret_key_change_this_in_production
JWT_SECRET=your_jwt_secret_key_for_authentication_change_this

# ==============================================
# FLASK APPLICATION CONFIGURATION
# ==============================================
FLASK_ENV=production
FLASK_DEBUG=0
LOG_LEVEL=INFO
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# SSL CONFIGURATION
# ==============================================
USE_SSL=true
SSL_CERT_PATH=./certs

# ==============================================
# SERVER CONFIGURATION
# ==============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5000

FRONTEND_HOST=localhost
FRONTEND_PORT=80

# ==============================================
# DATA PERSISTENCE
# ==============================================
DATA_PATH=./data

# ==============================================
# EXAMPLE VALUES FOR DEVELOPMENT/TESTING
# ==============================================
# Uncomment and modify for development testing:
# MYSQL_ROOT_PASSWORD=dev_root_pass_123
# MYSQL_PASSWORD=dev_app_pass_456
# SECRET_KEY=dev-secret-key-not-for-production
# JWT_SECRET=dev-jwt-secret-not-for-production
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# DOMAIN_NAME=localhost
# USE_SSL=false